{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block content %}

<div class="sidenav" style="background-image: url({{ asset('img/log.png') }})">
 </div>
 <div class="main">

    <div class="col-md-6 col-sm-12 ">
    <div class="pt-5">
    <a href="/"><object class="svgClass" width="200" type="image/svg+xml" data="{{asset('img/logo_violet.svg')}}"></object></a>          
    </div>   
    <div class="login-form">
                    

<form method="post" class="formulaire">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <h1 class="h3 pb-4">Connectez vous à votre compte</h1>
    <div class="d-grid gap-3">
    <div class="form-group">
    <input type="email" placeholder="Email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
    </div>
    <div class="form-group">
    <input type="password" placeholder="Mot de passe" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
    </div>
    </div>
    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    ><br>
    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}
    <div class="checkbox pb-3">
        <p class="text-muted" style="font-size:12px">
            En continuant vous acceptez et vous confirmez avoir lu la <a target="_blank" href="/cgv">politique de confidentialité</a> de JTCT.
        </p>
    </div>
    {#<a style="color:black" href="mot de passe oublié"><p>Mot de passe oublié ?</p></a>#}
    <button type="submit" id="loginbtn" >Connexion</button>
    </form>
    <div class="mt-5"><a href="{{ path('app_forgot_password_request') }}">Mot de passe oublié ?</a></div>
 <p class="mt-5 text-muted"style="position:fixed;bottom:0;color:black"> © 2022 - Join The Cap Table</p> 
</div>   

</div>
</div>
</div>
